<div class="container">
    <div class="home-banner text-center p-5">
        <h1>Cocktails</h1>
    </div>
    <div class="row justify-content-center">
        <% @cocktails.each do |cocktail| %>
        <div class="col-lg-4 col-12  p-2">

            <div class="card" style="height: 100%;">
                <% if cocktail.photos.attached? %>
                <img class="card-img-top" src="<%= cl_image_path cocktail.photos.first.key, height: 300, width: 300%>" alt="Card image cap">
                <%else%>
                <img class="card-img-top" src="http://via.placeholder.com/300/300" alt="Card image cap">
                <%end%>        
                <div class="card-body">
                <div class="card-title text-center">
                    <p><strong> <%= link_to cocktail.name, cocktail_path(cocktail)%></strong></p>
                </div>
                <div class="card-text"><%=cocktail.description%></div>
            </div>
            </div>
        </div>


        <% end %>
    </div>
    

    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-success"%>